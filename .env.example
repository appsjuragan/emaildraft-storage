# ObjectMail Environment Configuration
# Copy to .env and fill in values

# Database
DATABASE_URL=postgres://objectmail:objectmail@localhost:5432/objectmail

# S3 API credentials (used by aws-cli to authenticate)
S3_ACCESS_KEY_ID=objectmail
S3_SECRET_ACCESS_KEY=objectmail-secret-key
S3_REGION=us-east-1

# Email (Gmail with App Password)
EMAIL_PROVIDER=gmail
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=abcd efgh ijkl mnop
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_DRAFTS_FOLDER=[Gmail]/Drafts

# Storage
STORAGE_CHUNK_SIZE_MB=18
STORAGE_TEMP_DIR=./tmp

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
